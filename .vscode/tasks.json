{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "test",
      "group": "test",
      "problemMatcher": [
        "$tsc",
        {
          "pattern": "^(\\d+)(?:\\/\\d+)?(?:,\\s+\\d+)(?:\\/\\d+)?\\s*-\\s+(\\d+):(\\d+):(\\d+)\\s+(\\w+)\\s+(.*)$",
          "fileLocation": ["relative", "${workspaceFolder}/${3}"]
        }
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
